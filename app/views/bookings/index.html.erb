<h1>Listing bookings</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Room</th>
    <th>At</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= if booking.room == nil then '' else booking.room.description end %></td>
    <td><%= booking.customer.cognome %></td>
    <td><%= booking.at %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

